@model AppTrack.SharedModels.PromoContactEmail
@{
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
    ViewBag.thisPage = "PromotionalOffer";
    ViewBag.PageType = "PromotionalOffer";
}


<div class="row nopadding">
    <div class="container nopadding" style="margin-top:0px;">
        <div class="col-md-4  pull-left  hidden-xs hidden-sm" style="min-height:450px;">

        </div>
        <div class="col-md-8 pull-right no-offset nopadding" style="margin-top:20px;">

            <div class="col-md-6 nopadding">
                <img src="~/Images/HealthCareReform2015Cover.jpg" style="width:95%;height:auto;" alt="Health Care Reform 2015" />
            </div>

            <div class="col-md-6 nopadding">
                <div style="font-size: 14px;">
                    @if (ViewBag.Message == null || ViewBag.Message == "")
                    {
                        using (Html.BeginForm("HealthCareReform2015", "Site", FormMethod.Post, new { id = "EditAccount", @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-md-12" style="margin-top:5px;padding:5px;">
                                <span>Yes! Please send me a copy of &quot;Health Care Reform in 2015 and Beyond &quot;, Part 2.</span>
                                <br />
                            </div>
                            <input type="hidden" name="contactSource" value="Join by Dec 31 2105 get 3 months free">
                            <div class="col-md-10" style="margin-top:5px;padding:5px;">
                                @Html.EditorFor(model => model.contactName, new { htmlAttributes = new { @class = "form-control", placeholder = "Name", maxlength = "40" } })
                                @Html.ValidationMessageFor(model => model.contactName, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-10" style="margin-top:5px;padding:5px;">
                                @Html.EditorFor(model => model.contactDisplayName, new { htmlAttributes = new { @class = "form-control", placeholder = "Practice Name", maxlength = "100" } })
                                @Html.ValidationMessageFor(model => model.contactDisplayName, "", new { @class = "text-danger" })
                            </div>
                            <div class=" col-md-10" style="padding:5px;">
                                @Html.EditorFor(model => model.contactEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "Email", maxlength = "100" } })
                                @Html.ValidationMessageFor(model => model.contactEmail, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-10" style="padding:5px;">
                                @Html.EditorFor(model => model.contactPhone, new { htmlAttributes = new { @class = "form-control", id = "contactPhone", placeholder = "Phone", maxlength = "20" } })
                                @Html.ValidationMessageFor(model => model.contactPhone, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-12" style="padding:5px;">
                                <div class="col-md-1">@Html.CheckBoxFor(model => model.Option1)</div>
                                <div class="col-md-11">
                                    <span>Please send me part 1 of Health Care Reform 2015 and Beyond as well.</span>
                                    @Html.ValidationMessageFor(model => model.Option1, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12" style="padding:5px;">
                                <span style="font-size:.8em;">By submitting this form you are opting in to receive communication from AppTrack.</span>
                            </div>
                            <div class="col-md-12" style="padding:5px;">
                                <input type="Submit" name="Submit" value="Submit" class="btn btn-sm btn-info pull-right">
                                <div class="row"></div>
                            </div>
                        }
                    }
                    else
                    {
                        <br /><br /><br /><br /><br /><br /><span>Thank you for requesting a copy of the Healthcare Reform in 2015 and Beyond. We will be sending the paper over shortly.</span>
                    }
                </div>
            </div>
            <div class="row clear"></div>
            <br /><br /><br />
        </div>
        <div class="row nopadding" style="width:100%;height:25px;">
            &nbsp;
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#contactPhone").mask("(999)999‐9999?x9999");
    });
</script>

