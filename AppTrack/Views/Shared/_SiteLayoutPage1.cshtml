<body>

    @Html.Partial("_SiteHeader")

    @RenderBody()

    <div class="row nopadding hidden-xs hidden-sm" style="width:100%;height:5px;">
        <img src="../../images/FooterBar.png" class="nopadding" style="width:100%;height:5px;margin-top:-8px;" alt="Footer Bar - AppTrack Optometric Alliance" />
    </div>
    <div class="row nopadding bg-gray-dark  hidden-xs hidden-sm" style=" width:100%;height:105px;">
        <div class="container nopadding bg-gray-dark">
            <div class="col-md-4 nopadding">
                &nbsp;
            </div>
            <div class="col-md-8 nopadding">
                <div class="row nopadding ">
                    <div class="col-md-4 nopadding" style="padding-top:25px;text-align:left;">
                        &copy; 2015 AppTrack
                    </div>
                    <div class="col-md-4 nopadding" style="padding-top:25px;text-align:center;">
                        <a href="/Site/FAQs"><span style="color:#fff; display:none;">FAQs</span></a>
                    </div>
                    <div class="col-md-4 nopadding" style="padding-top:25px;text-align:right;">
                        <a href="/Site/PrivacyPolicy"><span style="color:#fff;">privacy policy</span></a>
                    </div>
                </div>
            </div>
        </div>
