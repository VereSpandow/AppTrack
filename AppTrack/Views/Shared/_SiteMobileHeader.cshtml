@using Microsoft.AspNet.Identity
@{
    var EducationStyle = "";
    var AppTrackStyle = "";
    var AppTrackSelectStyle = "";
    var SavingsAndRebatesStyle = "";
    var GrowthSolutionsStyle = "";
    if (ViewBag.PageType == "AppTrack")
    {
        AppTrackStyle = "nav-bg-green-light";
    }
    if (ViewBag.PageType == "AppTrackSelect")
    {
        AppTrackSelectStyle = "nav-bg-success-dark";
    }
    if (ViewBag.PageType == "SavingsAndRebates")
    {
        SavingsAndRebatesStyle = "nav-bg-info-dark";
    }
    if (ViewBag.PageType == "Education")
    {
        EducationStyle = "nav-bg-primary-dark";
    }
    if (ViewBag.PageType == "GrowthSolutions")
    {
        GrowthSolutionsStyle = "nav-bg-royalty-dark";
    }
}
<div class="hidden-md hidden-lg nopadding">
    <div class="container  nopadding" style="padding:0px;">
        <ul class="nav navbar-inverse nav-tabs nav-tabs-justified navbar-fixed-top" style="background-color:#333;padding:0px;">
            <li style="padding-top:7px;color:#fff;">@Html.ActionLink("About Us", "About", "SiteMobile")</li>
            <li style="padding-top:7px;color:#fff;">@Html.ActionLink("Contact Us", "Contact", "SiteMobile")</li>
            <li style="padding-top:7px;color:#fff;">@Html.ActionLink("FAQ", "FAQs", "SiteMobile")</li>
            <li style="padding-top:7px;color:#fff;"><a href="@Constants.siteURLSecure/Enrollment/Index" id="registerLink">Join</a></li>
        </ul>
    </div>
    <div class="row nopadding">
        <div class="container nopadding">
            <div class="col-md-12 logoHeader" style="color:#fff; text-align:center;">
                <a href="~/SiteMobile/Index"><img src="~/images/AppTrackLogo250.jpg" class="img-responsive" style="width:100%;height:auto;max-width:300px;margin:0 auto;" /></a>
            </div>
        </div>
    </div>
    <nav role="navigation" class="navbar navbar-default  navbar-static-top" style="margin-bottom:0px;">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header pull-left" style="padding-left:5px;background-color:#EEE;">
                <a href="#" class="navbar-brand pull-left">Menu</a>
                <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle  pull-left">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/SiteMobile/Contact" class="navbar-brandV2 pull-left" style="background-color: #FFF;">Contact Me About AppTrack</a>
            </div>
            <div class="row"></div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbarCollapse" style="font-size:1.25em;padding-left:20px;background-color:#EEE;">
                <ul class="nav navbar-nav">
                    <li style="padding-top:7px;border-bottom:1px #999 solid;"><a href="/SiteMobile/AppTrack">AppTrack<span class="pull-right fa fa-arrow-right"></span></a></li>
                    <li style="padding-top:7px;border-bottom:1px #999 solid;"><a href="/SiteMobile/AppTrackSelect">AppTrack Select<span class="pull-right fa fa-arrow-right"></span></a></li>
                    <li style="padding-top:7px;border-bottom:1px #999 solid;"><a href="/SiteMobile/SavingsAndRebates">Savings<span class="pull-right fa fa-arrow-right"></span></a></li>
                    <li style="padding-top:7px;border-bottom:1px #999 solid;"><a href="/SiteMobile/Education">Education<span class="pull-right fa fa-arrow-right"></span></a></li>
                    <li style="padding-top:7px;border-bottom:1px #999 solid;"><a href="/SiteMobile/GrowthSolutions">Growth Solutions<span class="pull-right fa fa-arrow-right"></span></a></li>
                    <li style="padding-top:7px;border-bottom:1px #999 solid;"><a href="/SiteMobile/AppTrackQuarterly">AppTrack Quarterly<span class="pull-right fa fa-arrow-right"></span></a></li>
                    <li style="padding-top:7px;border-bottom:1px #999 solid;"><a href="/SiteMobile/VideoGallery">Our Videos<span class="pull-right fa fa-arrow-right"></span></a></li>
                </ul>
            </div>
        </div>
    </nav>
</div>

<div class="hidden-sm hidden-xs">
    <div class="row nopadding">
        <div class="navbar navbar-inverse navbar-fixed-top bg-primary-dark nopadding">
            <div class="container nopadding">
                <div class=" pull-left col-md-4 nopadding">
                    &nbsp;
                </div>
                <div class="pull-right col-md-8 nopadding">
                    <div class="navbar-header nopadding">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse pull-right nopadding">
                        <ul class="nav navbar-nav">
                            <li style="padding-top:7px;">@Html.ActionLink("About Us", "About", "Site")</li>
                            <li style="padding-top:7px;">@Html.ActionLink("Contact Us", "Contact", "Site")</li>
                            <li style="padding-top:7px;">@Html.ActionLink("FAQs", "FAQS", "Site")</li>
                        </ul>
                        @Html.Partial("_SiteLoginPartial")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="container nopadding">
            <div class="col-md-4 pull-left">
                <div class="col-md-8 logoHeader" style="color:#fff; max-width:225px;padding-left:0px; padding-right:0px;">
                    <a href="~/Site/Index"><img src="~/images/AppTrackLogo250.jpg" class="pull-left img-responsive" style="width:100%;height:auto;" /></a>
                </div>
            </div>
            <div class="col-md-8 pull-right logoHeader">
                @if (ViewBag.PageType == "Index")
                {
                    <!--
                                   <a href="~/Site/Education"><img src="~/images/ConferenceButton.jpg" class="pull-right img-responsive" style="width:100%x;height:auto;max-width:490px;" /></a>
                    -->
                    <a href="~/Site/Education"><div class="btn btn-lg btn-primary pull-right" style="margin-top:20px;">Register for our New York or Los Angeles Regional Conference</div></a>
                }
                @if (Request.IsAuthenticated)
                {
                    <div class="pull-right style=" text-align:right;margin-right:-15px;">
                        <h4>Welcome @ViewBag.DisplayName !</h4>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row idocsubnavrow nopadding">
        <div class="container nopadding">
            <div class=" pull-left col-md-4 nopadding">
                &nbsp;
            </div>
            <div class="pull-right col-md-8 nopadding">
                <div class="pull-right col-md-12 nopadding">
                    <a href="~/Site/GrowthSolutions">
                        <div class="pull-right idocsubnav @GrowthSolutionsStyle" style="width:26%;" id="GrowthSolutionsStyle">
                            Growth Solutions
                        </div>
                    </a>
                    <a href="~/Site/Education">
                        <div class="pull-right idocsubnav @EducationStyle" style="width:20%;" id="EducationStyle">
                            Education
                        </div>
                    </a>
                    <a href="~/Site/SavingsAndRebates">
                        <div class="pull-right idocsubnav @SavingsAndRebatesStyle" style="width:20%;" id="SavingsAndRebatesStyle">
                            Savings
                        </div>
                    </a>
                    <a href="~/Site/AppTrackSelect">
                        <div class="pull-right idocsubnav @AppTrackSelectStyle" style="width:21%;" id="AppTrackSelectStyle">
                            AppTrack Select
                        </div>
                    </a>
                    <a href="~/Site/AppTrack">
                        <div class="pull-right idocsubnav @AppTrackStyle" style="border-left:1px #333 solid;width:13%;" id="AppTrackStyle">
                            AppTrack
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
