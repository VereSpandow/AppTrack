    <script>
        $(document).ready(function () {
            $.ajaxSetup({ cache: false });
            $.get("../Dashboard/LineChart1/?searchCustID=0&searchVendorID=275877", function (data1) {
                var svg1 = dimple.newSvg("#chartContainer1", 600, 400);
                var myChart1 = new dimple.chart(svg1, data1);
                // Filter for a single SKU and Channel

                // Create and Position a Chart
                var myChart1 = new dimple.chart(svg1, data1);
                myChart1.setMargins(50, 20, 20, 40)
                var x = myChart1.addCategoryAxis("x", "Period")
                myChart1.addMeasureAxis("y", "Sales");

                // Order the x axis by date
                x.addOrderRule("Period");

                // Min price will be green, middle price yellow and max red
                myChart1.addColorAxis("Sales", ["red", "yellow", "green"]);

                // Add a thick line with markers
                var lines = myChart1.addSeries(null, dimple.plot.line);
                lines.lineWeight = 5;
                lines.lineMarkers = true;

                // Draw the chart
                myChart1.draw();
            }, 'json');

           
