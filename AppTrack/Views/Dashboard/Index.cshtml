@{
    int thisCustID = 0;
    int thisVendorID = 0;
    ViewBag.Title = "Dashboard";
}

<div class="h2" style="float:left">AppTrack Executive Dashboard</div>
<div style="display:block;clear:both;"></div>
<div id="chartContainer1" class="col-md-6">
</div>
