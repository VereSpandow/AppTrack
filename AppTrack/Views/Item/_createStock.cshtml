        </div>
        
        <div class="col-md-4" style="margin-top:5px;text-align:center;">
            @Html.LabelFor(model => model.UnitOfMeasure, htmlAttributes: new { @class = "control-label", style = "font-weight:200;color:#333;margin-bottom:-3px;" })
            @Html.EditorFor(model => model.UnitOfMeasure, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UnitOfMeasure, "", new { @class = "text-danger" })
            <div class="row"></div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="col-md-4" style="margin-top:5px;text-align:center;">
            @Html.LabelFor(model => model.QtyCommitted, htmlAttributes: new { @class = "control-label", style = "font-weight:200;color:#333;margin-bottom:-3px;" })
