@model AppTrack.ViewModels.ItemPricingViewModel

@{
    ViewBag.Title = "Pricing";
}    

<h2>@ViewBag.Title</h2>

<p>
    <a onclick="$('#pricepanelcreate').toggle()" style="cursor: pointer;">Add a Price</a>
</p>        

<div id="pricepanelcreate" class="col-md-12" style="display:none;">
    @Html.Partial("_createPrice")
</div>  
 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PriceLevel)            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RetailPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalesPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShippingValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ItemPricingList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PriceLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingValue)
            </td>
            <td>
                @if (item.StatusID == 1)
                {
                    @Html.Raw("Active");
                }
                else
                {
                    @Html.Raw("Suspended");
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "ItemPricing", new { id = item.ID }, null)
            </td>
        </tr>
    }
</table>
