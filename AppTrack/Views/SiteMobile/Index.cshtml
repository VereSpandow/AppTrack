@{
    Layout = "~/Views/Shared/_SiteMobileLayoutPage1.cshtml";
    ViewBag.Title = "Home Page";
    ViewBag.thisPage = "Index";
    ViewBag.PageType = "Index";
    ViewBag.EditCookie = "Y";
}
<div class="row nopadding">
    <div class="container nopadding">
        <div id="myCarousel" class="carousel slide nopadding" data-ride="carousel" style="width:100%;height:auto;">
            <!-- Indicators -->
            <ol class="carousel-indicators" style="margin-bottom:-20px;">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner nopadding" role="listbox">
                <div class="item active">
                    <img src="~/content/images/Carousel-EyeOnSavings.png" alt="savings">
                </div>
                <div class="item">
                    <img src="~/content/images/Carousel-MoreThanAlliance.png" alt="savings">
                </div>
                <div class="item">
                    <img src="~/content/images/Carousel-MorePowerToYou.png" alt="savings">
                </div>
            </div>
            <!-- Left and right controls -->
            <a1 class="left carousel-control" href="#myCarousel" id="cPrev" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a1>
            <a2 class="right carousel-control" href="#myCarousel" id="cNext" role="button">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a2>
        </div>
    </div>
</div>
<div class="clearfix" style="height:25px;"></div>
<div class="container-fluid" style="padding-bottom:20px;">
    <div class="col-md-12 nopadding MembershipOptions" style="cursor: pointer; ">
        <div class="col-md-10 pull-left" style="text-align:left;height:75px;">
            <h1 class="nopadding text-gray-dark" id="membershipOptionsText" style="font-size:1.75em;">
                Membership Options
            </h1>
        </div>
        <div class="col-md-2 pull-right" style="text-align:right;height:75px;padding-top:10px;">
            <span class="fa fa-2x fa-arrow-right  text-info-dark " style="color:#008ED3;"></span>
        </div>
    </div>
    <div class="row"></div>
    <div class="col-md-12 nopadding Education" style="border-top:1px #CCC solid;cursor: pointer;">
        <div class="col-md-10 pull-left" style="text-align:left;height:75px;">
            <h1 class="nopadding text-gray-dark" id="educationText" style="font-size:1.75em;">
                National and Regional Conferences
            </h1>
        </div>
        <div class="col-md-2 pull-right" style="text-align:right;height:75px;padding-top:10px;">
            <span class="fa fa-2x fa-arrow-right text-primary-dark "></span>
        </div>
    </div>
    <div class="row"></div>
    <div class="col-md-12 nopadding Education" style="border-top:1px #CCC solid;cursor: pointer;">
        <div class="col-md-10 pull-left" style="text-align:left;height:75px;">
            <h1 class="nopadding text-gray-dark" id="educationText2" style="font-size:1.75em;">
                Local Study Group Meetings
            </h1>
        </div>
        <div class="col-md-2 pull-right" style="text-align:right;height:75px;padding-top:10px;">
            <span class="fa fa-2x fa-arrow-right text-royalty-dark "></span>
        </div>
    </div>
    <div class="row"></div>
    <div class="col-md-12 nopadding SavingsAndRebates" style="border-top:1px #CCC solid;cursor: pointer;">
        <div class="col-md-10 pull-left" style="text-align:left;height:75px;">
            <h1 class="nopadding text-gray-dark" id="savingsAndRebatesText" style="font-size:1.75em;">
                Vendor Savings
            </h1>
        </div>
        <div class="col-md-2 pull-right" style="text-align:right;height:75px;padding-top:10px;">
            <span class="fa fa-2x fa-arrow-right text-success-dark "></span>
        </div>
    </div>
</div>
<div class="row nopadding" style="width:100%;height:5px;">
    <img src="../../images/VideoBar.png" class="nopadding hidden-sm" style="width:100%;height:5px;margin-top:-10px;" />
</div>
<div class="row" style="background-color:#CCC;border-top:4px #939 solid;padding-top:20px;padding-bottom:15px;margin-bottom:-5px">
    <div class="container">
        <span style="font-size:1.1em;">
            Hear from our team
        </span>
        <br />
        <div class="col-md-12" style="text-align:right;">
            <iframe src="//player.vimeo.com/video/99263235" width="257" height="144" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        </div>
        <div class="col-md-12" style="text-align:right;">
            <iframe width="257" height="144" src="http://www.youtube.com/embed/sia_N2UGKfI?rel=0" frameborder="0" allowfullscreen></iframe>
        </div>
        <div class="col-md-12" style="text-align:right;">
            <iframe src="https://player.vimeo.com/video/112830611?title=0&byline=0&portrait=0" width="257" height="142" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe> <p><a href="https://vimeo.com/112830611">
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".Education").click(function () {
            window.location.href = '/SiteMobile/Education';
            return false;
        });
        $(".SavingsAndRebates").click(function () {
            window.location.href = '/SiteMobile/SavingsAndRebates';
            return false;
        });
        $(".MembershipOptions").click(function () {
            window.location.href = '/SiteMobile/MembershipOptions';
            return false;
        });
        $("#cNext").click(function () {
            $("#myCarousel").carousel('next');
        });
    });
</script>
