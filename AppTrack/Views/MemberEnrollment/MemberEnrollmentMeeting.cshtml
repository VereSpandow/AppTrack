@model AppTrack.ViewModels.MemberEnrollmentPrep

<div id="enrollRightCol4">
    <div class="panel panel-info panel-info-dark">
        <div class="panel-heading">
            <div class="panel-title">
                Select the local meeting that the new member attended.
            </div>
        </div>
        <div class="panel-body" style="min-height:300px;">
            @using (Ajax.BeginForm("MemberEnrollmentMeeting", "MemberEnrollment", null,
                         new AjaxOptions
                        {
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "POST",
                            OnSuccess = "OnSuccess1",
                            OnFailure = "OnFailure1",
                            LoadingElementId = "ajax-loader",
                            UpdateTargetId = "enrollRightCol4"
                        }, new { id = "memberEnrollmentForm3" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.AntiForgeryToken()
                <div class="col-md-12">
                    @Html.HiddenFor(model => model.ItemID)
                    @Html.HiddenFor(model => model.PromotionID)
                    <input type="hidden" name="SecSponsorID" id="SecSponsorID" value="@Model.SecSponsorID" />
                    <input type="hidden" name="SponsorID" id="SponsorID" value="@Model.SponsorID" />
                    <div class="col-md-6 col-md-offset-3" style="margin-top:5px;">
                        @Html.LabelFor(model => model.EventID, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.EventID, Model.EnrollmentMeetingList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EventID, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <br />
                        <input type="submit" name="button" value="Next" class="btn btn-sm btn-info pull-right">
                    </div>
                    <img id="ajax-loader" src="@Url.Content("~/Images/ajax-loader.gif")" style="display:none;" />
                </div>
            }
        </div>
        <div class="panel-footer">
            Next Step -->  Start the enrollment process.
        </div>
    </div>
</div>

<script>
    function OnSuccess1() {
    }
    function OnFailure1() {
    }
</script>
