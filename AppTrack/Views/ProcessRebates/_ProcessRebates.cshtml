@model AppTrack.ViewModels.ProcessRebatesViewModel
@{
    ViewBag.Title = "Confirm Processing Rebates";
}
<h2>@ViewBag.Title.</h2>
@using (Html.BeginForm("ProcessRebates", "ProcessRebates", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2>Confirm Processing Rebates</h2>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <input type="checkbox" id="ProcessRebatesConfirmation"  name="ProcessRebatesConfirmation" value="Y" class="checkbox-inline" style="margin-top:-2px;" />Yes, Process Rebates Now.
    </div>
    <div class="col-md-12">
        <div class="form-group">
            <input type="submit" name="button" value="Save" class="btn btn-sm btn-danger-dark pull-right">
        </div>
    </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}


